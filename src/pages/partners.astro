---
import BaseLayout from '../layouts/BaseLayout.astro';
import VolunteerSection from "../components/VolunteerSection.astro";

---

<BaseLayout>
        <!-- start banner -->
        <section class="p-0 top-space-margin position-relative overflow-hidden">
            <div class="container-fluid p-0 h-100 position-relative">
                <div class="row g-0">
                    <div class="col-xl-4 col-lg-5 d-flex justify-content-center align-items-center ps-10 xxl-ps-6 xl-ps-4 md-ps-4 sm-ps-0 position-relative order-2 order-lg-1" data-anime='{ "el": "childs", "translateY": [30, 0], "opacity": [0,1], "duration": 600, "delay":0, "staggervalue": 300, "easing": "easeOutQuad" }'>
                        <div class="vertical-title-center align-items-center justify-content-center flex-shrink-0 w-75px sm-w-50px">
                            <h1 class="title fs-15 alt-font text-dark-gray fw-700 text-uppercase ls-1px text-uppercase d-flex w-auto align-items-center m-0" data-fancy-text='{ "opacity": [0, 1], "translateY": [50, 0], "filter": ["blur(20px)", "blur(0px)"], "string": ["partners"], "duration": 400, "delay": 0, "speed": 50, "easing": "easeOutQuad" }'></h1>
                        </div>
                        <div class="border-start border-color-extra-medium-gray ps-40px sm-ps-20px position-relative z-index-9">
                            <h2 class="text-dark-gray fw-600 alt-font outside-box-right-10 xl-outside-box-right-15 lg-outside-box-right-20 md-me-0 sm-mb-0 ls-minus-3px">Partner with Us!</h2>
                        </div>
                    </div>
                    <div class="col-xl-8 col-lg-7 gradient-overlay position-relative one-half-screen order-1 order-lg-2 md-mb-50px"> 
                        <div class="overflow-hidden position-relative">
                            <div class="w-100" data-anime='{ "effect": "slide", "direction": "lr", "color": "#f7f7f7", "duration": 1000, "delay": 0 }'>
                                <img src="/src/assets/images/jcipartner.png" alt="" class="w-100 liquid-parallax" data-parallax-liquid="true" data-parallax-position="top" data-parallax-scale="1.05">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- end banner --> 

        <!-- start section -->
        <section>
            <div class="container">
              <div class="col-md-12">
                <h4 class="text-dark-gray text-center alt-font fw-600 ls-minus-2px">
                  Sponsorship Packages
                </h4>
              </div>
                <div class="row mt-5" data-anime='{ "el": "childs", "translateX": [30, 0], "opacity": [0,1], "duration": 600, "delay":0, "staggervalue": 300, "easing": "easeOutQuad" }'>
                    <div class="col-md-4 sm-mb-30px"> 
                        <span class="fs-30 alt-font ls-minus-05px fw-700 text-dark-gray">MAJOR SPONSOR</span>
                        <p class="w-70 mb-10px lg-w-90">package worth P15,000.00</p>
                        <div class="separator-line-1px bg-extra-medium-gray w-70 mt-20px mb-20px md-w-100"></div>
                        <div class="d-block fs-14">
                            <div class="text-dark-gray fw-600 fs-20">Inclusions</div> 
                            <div>Corporate/office logo in the tarpaulin collaterals</div>
                            <div>Social media advertisement from April - June 2024</div>
                            <div>Corporate/office logo in all collaterals and posters</div>
                            <div>Community development programs</div>
                            <div>Corporate/office logo in the souvenir program of TOSIA 2024</div>
                        </div>
                    </div>
                    <div class="col-md-4 sm-mb-30px"> 
                        <span class="fs-30 alt-font ls-minus-05px fw-700 text-dark-gray">MINOR SPONSOR</span>
                        <p class="w-70 mb-10px lg-w-90">package worth P10,000.00</p>
                        <div class="separator-line-1px bg-extra-medium-gray w-70 mt-20px mb-20px md-w-100"></div>
                        <div class="d-block fs-14">
                            <div class="text-dark-gray fw-600 fs-20">Inclusions</div> 
                            <div>Corporate/office logo in the tarpaulin collaterals</div>
                            <div>Social media advertisement from April - June 2024</div>
                            <div>Corporate/office logo in all collaterals and posters</div>
                            <div>Corporate/office logo in the souvenir program of TOSIA 2024</div>
                        </div>
                    </div>
                    <div class="col-md-4"> 
                        <span class="fs-30 alt-font ls-minus-05px fw-700 text-dark-gray">SPECIAL SPONSOR</span>
                        <p class="w-70 mb-10px lg-w-90">package worth P5,000.00</p>
                        <div class="separator-line-1px bg-extra-medium-gray w-70 mt-20px mb-20px md-w-100"></div>
                        <div class="d-block fs-14">
                            <div class="text-dark-gray fw-600 fs-20">Inclusions</div> 
                            <div>Social media advertisement from April - June 2024</div>
                            <div>Corporate/office logo in the souvenir program of TOSIA 2024</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- end section -->
                <!-- start section -->
                <section class="p-0">
                    <div class="container-fluid p-0">
                        <div class="row g-0">
                            <div class="col-xl-6 col-lg-7 cover-background md-h-500px sm-h-400px md-mb-50px" style="background-image:url('/src/assets/jci/jciregattagroup.jpg')">
